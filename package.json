{
  "name": "watchthis-user-service",
  "version": "1.5.0",
  "description": "User management service for WatchThis",
  "main": "dist/src/server.js",
  "files": [
    "dist/src",
    "views",
    "public"
  ],
  "scripts": {
    "build:watch": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\" \"npm run tailwind:css:watch\"",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:check": "eslint . --ext .ts,.js",
    "lint": "eslint . --ext .ts,.js --fix",
    "start:watch": "nodemon dist/src/server.js",
    "start": "node dist/src/server.js",
    "tailwind:css:watch": "postcss src/styles/style.css -o public/styles/style.css --watch --verbose",
    "tailwind:css": "postcss src/styles/style.css -o public/styles/style.css",
    "test": "npm run build && NODE_ENV=test node --test --require ts-node/register test/*.test.ts",
    "tidy": "npm run lint && npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/parser": "^7.12.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint-config-plus-prettier": "^1.5.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "nodemon": "^3.1.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-minify": "^1.1.0",
    "prettier": "^3.3.1",
    "supertest": "^7.0.0",
    "supertest-session": "^5.0.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "mongoose": "^8.4.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.3"
  },
  "prettier": "eslint-config-plus-prettier/.prettierrc.json"
}

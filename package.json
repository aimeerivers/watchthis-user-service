{
  "name": "watchthis-user-service",
  "version": "1.7.2",
  "description": "User management service for WatchThis",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "files": [
    "dist/src",
    "public",
    "views"
  ],
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\" \"npm run tailwind:css:watch\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "package:lint": "npx npm-package-json-lint .",
    "start": "node dist/src/server.js",
    "start:watch": "nodemon dist/src/server.js",
    "tailwind:css": "postcss src/styles/style.css -o public/styles/style.css",
    "tailwind:css:watch": "postcss src/styles/style.css -o public/styles/style.css --watch --verbose",
    "test": "npm run build && NODE_ENV=test node --test --require ts-node/register test/*.test.ts",
    "tidy": "npm run lint && npm run format"
  },
  "dependencies": {
    "app-root-path": "3.1.0",
    "bcrypt": "5.1.1",
    "connect-flash": "0.1.1",
    "connect-mongo": "5.1.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-session": "1.18.0",
    "mongoose": "8.5.2",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "pug": "3.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@types/bcrypt": "5.0.2",
    "@types/connect-flash": "0.0.40",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/passport": "1.0.16",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "autoprefixer": "10.4.20",
    "concurrently": "8.2.2",
    "eslint-config-plus-prettier": "1.5.9",
    "nodemon": "3.1.4",
    "npm-package-json-lint": "8.0.0",
    "postcss": "8.4.41",
    "postcss-cli": "11.0.0",
    "postcss-minify": "1.1.0",
    "supertest": "7.0.0",
    "supertest-session": "5.0.1",
    "tailwindcss": "3.4.9",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  },
  "prettier": "eslint-config-plus-prettier/.prettierrc.json"
}
